generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  githubId     String?   @unique
  email        String    @unique
  name         String
  image        String?
  githubToken  String?
  appInstalled Boolean   @default(false)
  createdAt    DateTime  @default(now())
  
  @@index([githubId])
  @@index([email])
}

model OAuthState {
  id        String   @id @default(uuid())
  state     String   @unique
  createdAt DateTime @default(now())
  
  @@index([state])
}

model AutomatedIssue {
  id              String   @id @default(uuid())
  repositoryOwner String
  repositoryName  String
  issueNumber     Int
  issueId         BigInt
  title           String
  body            String?
  state           String
  htmlUrl         String
  assignees       Json     @default("[]")
  labels          Json     @default("[]")
  user            Json
  comments        Int      @default(0)
  createdAt       DateTime
  updatedAt       DateTime
  autoAssign      Boolean  @default(true)
  allowMultipleAssignees Boolean @default(false)
  assignedTo      String?
  userId          String
  githubToken     String?  // Token for Kestra to call GitHub API
  createdAtDb     DateTime @default(now())
  
  @@unique([repositoryOwner, repositoryName, issueNumber])
  @@index([userId])
  @@index([repositoryOwner, repositoryName])
}

model AutomatedPR {
  id              String   @id @default(uuid())
  repositoryOwner String
  repositoryName  String
  prNumber        Int
  prId            Int
  title           String
  body            String?
  state           String
  htmlUrl         String
  head            Json
  base            Json
  user            Json
  labels          Json     @default("[]")
  comments        Int      @default(0)
  reviewComments Int      @default(0)
  commits         Int      @default(0)
  additions       Int      @default(0)
  deletions       Int      @default(0)
  changedFiles    Int      @default(0)
  createdAt       DateTime
  updatedAt       DateTime
  mergedAt        DateTime?
  aiAnalysis      Boolean  @default(false)
  autoMerge       Boolean  @default(false)
  merged          Boolean  @default(false)
  userId          String
  createdAtDb     DateTime @default(now())
  
  @@unique([repositoryOwner, repositoryName, prNumber])
  @@index([userId])
  @@index([repositoryOwner, repositoryName])
}

