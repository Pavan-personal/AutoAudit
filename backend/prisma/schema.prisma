generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  githubId     String?   @unique
  email        String    @unique
  name         String
  image        String?
  githubToken  String?
  appInstalled Boolean   @default(false)
  createdAt    DateTime  @default(now())
  kestraWebhookUrlDomain String?
  kestraWebhookSecret String?
  
  automatedIssues AutomatedIssue[]
  
  @@index([githubId])
  @@index([email])
}

model OAuthState {
  id        String   @id @default(uuid())
  state     String   @unique
  createdAt DateTime @default(now())
  
  @@index([state])
}

model AutomatedIssue {
  id              String   @id @default(uuid())
  repositoryOwner String
  repositoryName  String
  issueNumber     Int
  issueId         BigInt
  title           String
  body            String?
  state           String
  htmlUrl         String
  assignees       Json     @default("[]")
  labels          Json     @default("[]")
  user            Json
  comments        Int      @default(0)
  createdAt       DateTime
  updatedAt       DateTime
  autoAssign      Boolean  @default(true)
  allowMultipleAssignees Boolean @default(false)
  assignedTo      String?
  userId          String
  owner           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  kestraWebhookUrl String?
  webhookSecret   String?
  createdAtDb     DateTime @default(now())
  
  @@unique([repositoryOwner, repositoryName, issueNumber])
  @@index([userId])
  @@index([repositoryOwner, repositoryName])
}


